show tables;
--Sharing emp_table
create or replace share EMP_SHARE;

--Grant usage on database


GRANT USAGE ON DATABASE PRACTICE_DB to SHARE EMP_SHARE;

GRANT USAGE ON SCHEMA SF_SCHEMA to SHARE EMP_SHARE;

GRANT SELECT ON TABLE EMP_TABLE TO SHARE EMP_SHARE;

SHOW GRANTS ON SHARE EMP_SHARE;

SHOW GRANTS TO SHARE EMP_SHARE;


ALTER SHARE EMP_SHARE ADD ACCOUNT =<CUSTOMET_ACCOUNT_ID>;


--create READER ACCOUNT
create MANAGED ACCOUNT TECH_READER_ACCOUNT
ADMIN_NAME=TECH_READER,
ADMIN_PASSWORD='pwd',
TYPE=READER;


show managed accounts;

ALTER SHARE EMP_SHARE ADD ACCOUNT = PC21876;



--Quering in Reader Account


  show shares;
desc share EMP_SHARE;


create database DATA_SHARE_DB from SHARE WWGXATN.PZ74592.EMP_SHARE;

select * from EMP_TABLE;
